<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-slate-900 text-white antialiased">

    <!-- Main Container -->
    <div class="container mx-auto max-w-6xl px-4 py-8 sm:py-12">

        <!-- Form Section -->
        <div class="mb-12">
            <form id="task-form" class="space-y-4" action="/create" method="post">
                <!-- Title Input -->
                <input
                    id="task-title"
                    type="text"
                    placeholder="Title goes here.."
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg p-3 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200" name="title"
                >
                <!-- Details Textarea -->
                <textarea
                    id="task-details"
                    rows="3"
                    placeholder="Write your task details here..."
                    class="w-full bg-slate-800 border border-slate-700 rounded-lg p-3 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200" name="detail"
                ></textarea>
                <!-- Submit Button -->
                <div>
                    <button
                        type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-5 rounded-lg transition duration-200 ease-in-out transform hover:scale-105"
                    >
                        Create Task
                    </button>
                </div>
            </form>
        </div>

        <!-- Task Cards Grid -->
         
        <div id="task-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% if (files.length > 0) { %>
    <% files.forEach((file) => { %>
        <div class="bg-slate-800 p-6 rounded-lg shadow-lg flex flex-col justify-between">
            <div>
                <h2 class="text-xl font-bold text-white mb-2"><%= file %></h2>
                <a href="/file/<%= file %>" class="text-blue-500 hover:underline">Read More</a>
            </div>
         
            
        </div>
    <% }) %>
<% } else { %>
    <h3 class="text-white">No tasks yet</h3>
<% } %>
           
        </div>
    </div>
<script src="/javascripts/script.js"></script>
</body>
</html>